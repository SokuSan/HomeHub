<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCE0EE">

    <androidx.cardview.widget.CardView
        android:id="@+id/recyclerVCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recyclerVChImgCircle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blackciercle" />

    <TextView
        android:id="@+id/recyclerVChTvName"
        android:layout_width="59dp"
        android:layout_height="36dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="34dp"
        android:fontFamily="monospace"
        android:text="@string/name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/recyclerVChImgCircle"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/recyclerVChImgBin"
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/recyclerVChTvName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_72_1720992_trash_vector_png_clipart_rubbish_bins_waste_paper_removebg_preview"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/recyclerVChTvDescription"
        android:layout_width="264dp"
        android:layout_height="71dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="6dp"
        android:text="@string/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerVChTvName" />
</androidx.constraintlayout.widget.ConstraintLayout>