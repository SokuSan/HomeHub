<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE0EE"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-22dp">

    <ImageView
        android:id="@+id/startImgLogo"
        android:layout_width="331dp"
        android:layout_height="176dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/homehub"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/startImgOptions"
        android:layout_width="79dp"
        android:layout_height="78dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/options"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/startImgChart"
        android:layout_width="104dp"
        android:layout_height="84dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startImgLogo"
        app:srcCompat="@drawable/chart"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/startImgHouse"
        android:layout_width="131dp"
        android:layout_height="123dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTvExpenses"
        app:srcCompat="@drawable/house"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/startTvExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace"
        android:text="@string/expenses"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startImgChart" />

    <ImageView
        android:id="@+id/startImgShopping"
        android:layout_width="140dp"
        android:layout_height="125dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTvChores"
        app:srcCompat="@drawable/shopping"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/startTvShopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:fontFamily="monospace"
        android:text="@string/shopping"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startImgShopping" />

    <TextView
        android:id="@+id/startTvChores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace"
        android:text="CHORES"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startImgHouse"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>