<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE0EE"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-22dp">

    <ImageView
        android:id="@+id/loginImgLogo"
        android:layout_width="331dp"
        android:layout_height="176dp"
        app:srcCompat="@drawable/homehub"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="36dp" />

    <EditText
        android:id="@+id/loginEtEmail"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="271dp"
        android:layout_height="41dp"
        android:background="#42B8D4"
        android:drawableWidth="24dp"
        android:drawableHeight="24dp"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="275dp" />

    <TextView
        android:id="@+id/loginEtForgotPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Did you forgot your password?"
        android:textColor="#000000"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="394dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="43dp"
        android:layout_height="42dp"
        app:srcCompat="@drawable/password"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="343dp" />

    <EditText
        android:id="@+id/loginEtPassword"
        android:layout_width="271dp"
        android:layout_height="41dp"
        android:background="#42B8D4"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="343dp" />

    <ImageView
        android:id="@+id/loginImgEmail"
        android:layout_width="43dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/usuario_removebg_preview"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="275dp" />

    <TextView
        android:id="@+id/loginEtNotAMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Not a member? Sign up now!"
        android:textColor="#000000"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="668dp" />

    <Button
        android:id="@+id/loginBtnLogIn"
        android:layout_width="329dp"
        android:layout_height="91dp"
        android:backgroundTint="#42B8D4"
        android:fontFamily="monospace"
        android:text="LOG IN"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="561dp" />

    <CheckBox
        android:id="@+id/loginCheckRememberDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Remember this device"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="436dp" />
</androidx.constraintlayout.widget.ConstraintLayout>