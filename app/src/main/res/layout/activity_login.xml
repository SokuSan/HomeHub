<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE0EE"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-22dp">

    <ImageView
        android:id="@+id/startImgLogo"
        android:layout_width="331dp"
        android:layout_height="176dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/homehub"
        android:contentDescription="@string/todo4" />

    <EditText
        android:id="@+id/recoverEtEmail"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="271dp"
        android:layout_height="48dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="63dp"
        android:autofillHints=""
        android:background="#42B8D4"
        android:drawableWidth="24dp"
        android:drawableHeight="24dp"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#263238"
        app:layout_constraintStart_toEndOf="@+id/recoverImgEmail"
        app:layout_constraintTop_toBottomOf="@+id/startImgLogo" />

    <TextView
        android:id="@+id/loginEtForgotPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="9dp"
        android:fontFamily="monospace"
        android:text="@string/did_you_forgot_your_password"
        android:textColor="#000000"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerImgPwd" />

    <ImageView
        android:id="@+id/registerImgPwd"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recoverImgEmail"
        app:srcCompat="@drawable/password"
        android:contentDescription="@string/todo3" />

    <EditText
        android:id="@+id/registerEtPassword"
        android:layout_width="271dp"
        android:layout_height="48dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="27dp"
        android:background="#42B8D4"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="#263238"
        app:layout_constraintStart_toEndOf="@+id/registerImgPwd"
        app:layout_constraintTop_toBottomOf="@+id/recoverEtEmail"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/recoverImgEmail"
        android:layout_width="43dp"
        android:layout_height="44dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="63dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startImgLogo"
        app:srcCompat="@drawable/usuario_removebg_preview"
        android:contentDescription="@string/todo2" />

    <TextView
        android:id="@+id/loginEtNotAMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="@string/not_a_member_sign_up_now"
        android:textColor="#000000"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionsBtnLogOut" />

    <Button
        android:id="@+id/optionsBtnLogOut"
        android:layout_width="329dp"
        android:layout_height="91dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#42B8D4"
        android:fontFamily="monospace"
        android:text="@string/log_in"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginCheckRememberDevice"
        tools:ignore="TextSizeCheck,VisualLintButtonSize" />

    <CheckBox
        android:id="@+id/loginCheckRememberDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="23dp"
        android:fontFamily="monospace"
        android:text="@string/remember_this_device"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginEtForgotPwd" />
</androidx.constraintlayout.widget.ConstraintLayout>